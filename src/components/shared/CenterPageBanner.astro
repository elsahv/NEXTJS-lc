---
export interface Props {
  BannerTitle: string;
  paragraph: string;
}

const { BannerTitle, paragraph } = Astro.props as Props;
---

<div id="BannerTitle-wrapper" class="bg-">
  <div id="BannerTitle-section" class="bg- py-3 flex justify-center bg-">
    <h2 class="2xl:text-5xl text-4xl px-5 2xl:py-2 font-bold underline">
      {BannerTitle}
    </h2>
  </div>

  <div id="Banner-paragraph" class="bg- flex justify-center md:mb-5">
    <div class="pt-1 pb-5">
      <p class="md:text-xl text-md px-5">{paragraph}</p>
    </div>
  </div>
</div>
